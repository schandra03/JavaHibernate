<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.jwt.hibernate.bean.User" table="emp1000">
		<id column="ID" name="id" type="java.lang.Integer"></id>
		<property column="firstName" name="firstName" type="java.lang.String" />
		<property column="lastName" name="lastName" type="java.lang.String" />
		<property column="age" name="age" type="java.lang.Integer" />
	</class>
</hibernate-mapping>
